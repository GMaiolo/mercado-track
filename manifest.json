{
    "author": "Guillermo Maiolo",
    "manifest_version": 2,
    "name": "Mlibre",
    "description": "Mlibre",
    "version": "0.0.1",
    "permissions": [
        "notifications",
        "storage",
        "unlimitedStorage"
    ],
    "browser_action": {
        "default_title": "Mlibre",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "vendor/moment.min.js",
            "scripts/utils/utils.js",
            "scripts/item.model.js",
            "scripts/storage.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "vendor/moment.min.js",
                "vendor/chart.min.js",
                "scripts/utils/utils.js",
                "scripts/utils/dom.utils.js",
                "scripts/graph.js",
                "scripts/item.model.js",
                "scripts/storage.js",
                "main.js"
            ],
            "matches": [
                "*://articulo.mercadolibre.com.ar/*"
            ],
            "run_at": "document_end"
        }
    ]
}
