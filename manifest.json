{
    "author": "Guillermo Maiolo",
    "manifest_version": 2,
    "name": "MercadoTrack",
    "description": "MercadoTrack",
    "version": "0.2.1",
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "icons": {
        "128": "images/icon_128.png"
    },
    "browser_action": {
        "default_title": "MercadoTrack",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "scripts/vendor/moment.min.js",
            "scripts/modules/utils/utils.js",
            "scripts/modules/item.model.js",
            "scripts/modules/storage.js",
            "scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "scripts/vendor/moment.min.js",
                "scripts/vendor/chart.min.js",
                "scripts/modules/utils/utils.js",
                "scripts/modules/utils/dom.utils.js",
                "scripts/modules/graph.js",
                "scripts/modules/item.model.js",
                "scripts/modules/storage.js",
                "scripts/main.js"
            ],
            "matches": [
                "*://articulo.mercadolibre.com.ar/*"
            ],
            "run_at": "document_end"
        }
    ]
}
